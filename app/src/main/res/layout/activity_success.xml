<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.postest.SuccessActivity">

        <ImageView
            android:id="@+id/gambarSuccess"
            android:layout_marginTop="100dp"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/success"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/txtBerhasil"
            android:layout_below="@id/gambarSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaksi Berhasil"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_below="@id/txtBerhasil"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txtKembalian"
                android:layout_below="@id/txtBerhasil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="Rp. 1,000.00" />

            <TextView
                android:id="@+id/txt"
                android:layout_toRightOf="@+id/txtKembalian"
                android:layout_below="@id/txtBerhasil"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="kembalian dari"/>

            <TextView
                android:id="@+id/txtCash"
                android:layout_below="@id/txtBerhasil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/txt"
                android:layout_marginTop="10dp"
                android:text="Rp. 1,000.00" />
        </LinearLayout>


    <Button
        android:id="@+id/buttonPrint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="70dp"
        android:background="@color/warnaTombolMuda"
        android:text="Print Receipt"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonSales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@color/warnaTombolMuda"
        android:text="Transaksi Baru"
        android:textColor="@color/white" />

</RelativeLayout>
