<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.android.postest.DetailBarangActivity">

    <ImageView
        android:id="@+id/imageBarang"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:id="@+id/layoutText"
        android:layout_below="@+id/imageBarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="visible">
        
        <TextView
            android:id="@+id/txtNamaBarang"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="xcvbnm"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/txtHargaBarang"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="xcvbnm"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/txtStock"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="xcvbnm"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/txtDeskripsi"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="xcvbnm"
            android:layout_weight="9"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnEditBarang"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_weight="1"
            android:text="Edit Barang"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutEdit"
        android:layout_below="@+id/imageBarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/editNamaBarang"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="xcvbnm"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/editHargaBarang"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="xcvbnm"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/editStock"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="xcvbnm"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/editDeskripsi"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="xcvbnm"
            android:layout_weight="9"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
            android:id="@+id/btnUpdateBarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_weight="1"
            android:text="Edit Barang"
            android:layout_marginHorizontal="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
        <Button
            android:id="@+id/btnCancelEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_weight="1"
            android:layout_marginHorizontal="16dp"
            android:text="Edit Barang"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
