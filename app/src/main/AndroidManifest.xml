<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.postest">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.gms.vision.DEPENDENCIES"
            android:value="barcode" />

        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BarangActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".TambahBarangActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity
            android:name=".CheckoutActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".CashActivity" />
        <activity
            android:name=".ReceiptActivity"
            android:parentActivityName=".CheckoutActivity" />
        <activity
            android:name=".RiwayatActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".DetailBarangActivity"
            android:parentActivityName=".BarangActivity" />
        <activity
            android:name=".DetailTransaksiActivity"
            android:parentActivityName=".RiwayatActivity" />
        <activity android:name=".SuccessActivity" />
        <activity android:name=".AddJumlahActivity" />
        <activity android:name=".barcode" />
        <activity android:name=".cobaScan"></activity>
    </application>

</manifest>